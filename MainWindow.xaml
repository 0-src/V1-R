<Window x:Class="V1_R.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:V1_R"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="800" Width="1200"
        Background="#1E1E1E">
    <Grid Margin="10">
        <!-- Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- Header -->
            <RowDefinition Height="200"/>
            <!-- Filters -->
            <RowDefinition Height="*"/>
            <!-- Data Grid -->
            <RowDefinition Height="250"/>
            <!-- Chart -->
            <RowDefinition Height="40"/>
            <!-- Tabs -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#FF4500" Padding="10">
            <TextBlock Text="V1 Performance Dashboard" Foreground="White" FontSize="16" FontWeight="Bold"/>
        </Border>

        <!-- FILTERS PANEL -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Background="#333" Margin="10">
            <Grid Background="#222" Margin="10" Height="120">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Accounts" Foreground="White"/>
                    <CheckBox Content="APEX329670000001" Foreground="White"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="PLACEHOLDER" Foreground="White"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="PLACEHOLDER" Foreground="White"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- DATA GRID -->
        <DataGrid Grid.Row="2" Background="Black" Foreground="Black" HeadersVisibility="Column" 
                  AutoGenerateColumns="False" BorderBrush="#666" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Period" Width="100" Foreground="White"/>
                <DataGridTextColumn Header="Net Profit" Width="100" Foreground="White"/>
                <DataGridTextColumn Header="Gross Profit" Width="100" Foreground="White"/>
                <DataGridTextColumn Header="Gross Loss" Width="100" Foreground="White"/>
                <DataGridTextColumn Header="Commission" Width="100" Foreground="White"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- CHART SECTION -->
        <Border Grid.Row="3" Background="Black" Padding="10">
            <TextBlock Text="Graph: Cumulative Net Profit" Foreground="White"/>
            <!-- Placeholder for Chart (To be implemented using OxyPlot or LiveCharts) -->
        </Border>
    </Grid>
</Window>
